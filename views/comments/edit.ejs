<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Edit Comment </h1>
        <div style="width:30%;margin:30px auto" >
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" value="<%=comment.text%>" name="comment[text]" class="form-control">
                </div>    
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn default btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
    
</div>
<% include ../partials/footer %>